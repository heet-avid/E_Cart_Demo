@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = Context.Session.GetInt32("_SessionIsAdmin");
}
    <input type="hidden" id="isAdmin" value="@isAdmin" />
<div class="pagetitle">
    <h1>Products</h1>
</div>

<section class="section">
    <div class="row">
        <div class="col-xxl-12">
            <div class="card">
                <div class="mx-4 mt-5 d-flex justify-content-start align-items-center">
                    @if (isAdmin == 1)
                    {
                        <!-- Button to Open Modal -->
                        <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#productModal">
                            Add New Product
                        </button>
                    }
                </div>
                <div class="card-body">
                    <div class="table-responsive p-2">
                        <table class="table table-hover" id="productDT" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
 

<!-- Product Modal -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Add New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="productForm" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" required>
                        <div class="invalid-feedback">
                            Please enter a name.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a description.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price ($)</label>
                        <input type="number" step="0.01" class="form-control" id="price" required min="0">
                        <div class="invalid-feedback">
                            Please enter a valid price (greater than 0).
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="number" class="form-control" id="stock" required min="1">
                        <div class="invalid-feedback">
                            Please enter a valid stock (greater than 0).
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Add Product</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Product Modal -->
<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="productEditForm" novalidate>
                    <input type="hidden" class="form-control" id="editId" required>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="editName" required>
                        <div class="invalid-feedback">
                            Please enter a name.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="editDescription" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a description.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price ($)</label>
                        <input type="number" step="0.01" class="form-control" id="editPrice" required min="0">
                        <div class="invalid-feedback">
                            Please enter a valid price (greater than 0).
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="number" class="form-control" id="editStock" required min="1">
                        <div class="invalid-feedback">
                            Please enter a valid stock (greater than 0).
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Update Product</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/product.js"></script>
