@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>Shopping Cart</h1>
</div>

<div class="container-fluid pt-4 default-dashboard">
    <div class="row">
        <div class="col-xxl-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive p-2">
                        <table class="table table-hover" id="cartDT" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4 shadow rounded p-3 bg-white">
                            <h5 class="mb-3 mb-md-0">Total</h5>
                            <h5 id="total-price" class="mb-3 mb-md-0">$0.00</h5>
                            <button onclick="PlaceOrder()" class="btn btn-success">Place Order</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/cart.js"></script>